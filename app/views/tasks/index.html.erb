<%= render "devise/shared/header" %>

<div class="second-header">
  <div class=user-name>
  <% if user_signed_in? %>
    <p><%= current_user.name %>さん　ようこそ</p>
  <% end %>
  </div>

  <div class="task-btn">
  <div class="btn btn-warning btn-lg">
    <%= link_to new_task_path, :style=>"text-decoration: none;" do %>
    <span class="task-text">投稿する<i class="fas fa-pen"></i></span>
    <% end %>
  </div>  
  </div>
</div>  



<div class="container">
<div class="main-content">
    <% @tasks.each do |task| %>
      <div class="content_post">
        <h1><%= task.title%></h1>
        <ul>
         <li class="edit-btn">
          <%= link_to edit_task_path(task.id), method: :get do %>
            <i class="fas fa-edit"></i>
          <% end %>
         </li>
        </ul>
        <span class="text">
          <%= task.text %>
        </span>
        <div class="task_user">
          <span class="user-list">ユーザ名:</span><%= task.user.name %>
        </div>
        <hr>
      </div>
    <% end %>
</div>
</div>