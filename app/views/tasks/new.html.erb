<nav class="navbar navbar-light navbar-dark bg-warning">
    <a class="navbar-brand"  href="#">ルーティン投稿画面</a>
</nav>

<div class="container mt-5 p-lg-5 bg-light">
  <%= form_with(model: @task, local: true) do |f| %>

  <div class="container">
    <div class="form-group row">
      <div class="col-md-8">
        <label for="Name">タイトル</label><br />
        <%= f.text_field :title, class: "form-control" ,id:"title" %>
      </div>
    </div>
  </div>  

    <div class="container">
    <div class="form-group row">
      <div class="col-md-8">
        <label for="Name">内容</label><br />
        <%= f.text_area :text, class: "form-control" ,id:"text", size: "20x10" %>
      </div>
    </div>
  </div>    

  <div class="container mt-5">
    <div class="col-md-4 align-self-center">
      <%= f.submit "投稿する", class: "btn btn-primary btn-block" %>
    </div>
  </div> 
  <% end %> 
</div>
